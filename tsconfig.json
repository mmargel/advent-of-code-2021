{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "dist",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
